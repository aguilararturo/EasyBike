{
    "extends": "eslint-config-airbnb-es5",
    "parserOptions": {
        "sourceType": "script"
    },
    "env": {
        "jasmine": true
    },
    "globals": {
        "angular": true,
        "$": true,
        "trackCustomEvent": true
    },
    "rules": {
        "no-cond-assign": ["warn"],
        "no-tabs": ["error"],
        "no-shadow": ["warn"],
        "no-undefined": ["off"],
        "comma-dangle": ["error", "never"],
        "consistent-return": ["off"],
        "func-names": ["warn"],
        "indent": ["error", 4, {
            "SwitchCase": 1
        }],
        "no-param-reassign": ["error", {
            "props": false
        }],
        "valid-jsdoc": ["error", {
            "requireReturn": false,
            "requireReturnDescription": false
        }],
        "wrap-iife": ["error", "inside"]
    }
}
